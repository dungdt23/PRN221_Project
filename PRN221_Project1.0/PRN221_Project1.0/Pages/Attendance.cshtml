@page
@model PRN221_Project1._0.Pages.AttendanceModel
@{
    Layout = "_MainLayout";

}
<form method="post" asp-page-handler="Attendance" asp-for="AttendanceModel">
    <table border="1">
        <tr>
            <td>
                Student ID
            </td>
            <td>
                Image
            </td>
            <td>
                Name
            </td>
            <td>
                Email
            </td>
            <td>
                Attendance
            </td>
        </tr>
        @foreach (var s in Model.attendances)
        {
            <tr>
                <td>
                    @s.Student.StudentId
                </td>
                <td style="width: 100px; height: 100px;">
                    <img src="https://ionicframework.com/docs/img/demos/avatar.svg" style="width: 100%; height: 100%;">
                </td>
                <td>
                    @s.Student.LastName @s.Student.FirstName
                </td>
                <td>
                    @s.Student.Email
                </td>
                <td>
                    @if (s.IsAbsent)
                    {
                        <div>
                            Absent <input type="radio" checked="checked" name="attendance @s.Student.StudentId" value="true" asp-for="@s.IsAbsent">
                            Present <input type="radio" name="attendance @s.Student.StudentId" value="false" asp-for="@s.IsAbsent">
                        </div>
                    }
                    else
                    {
                        <div>
                            Absent <input type="radio" name="attendance @s.Student.StudentId" value="true" asp-for="@s.IsAbsent">
                            Present <input type="radio" checked="checked" name="attendance @s.Student.StudentId" value="false" asp-for="@s.IsAbsent">
                        </div>
                    }
                </td>
            </tr>
        }
    </table>
    <input type="submit" value="Save"/>
</form>
